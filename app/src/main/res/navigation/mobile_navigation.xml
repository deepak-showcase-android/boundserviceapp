<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_music">

    <fragment
        android:id="@+id/navigation_music"
        android:name="com.showcase.boundserviceapp.view.music.MusicFragment"
        android:label="@string/title_music"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_download"
        android:name="com.showcase.boundserviceapp.view.download.DownloadFragment"
        android:label="@string/title_download"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.showcase.boundserviceapp.view.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
